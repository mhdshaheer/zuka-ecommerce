<style>
    .dropdown {
        position: relative;
        display: inline-block;
    }

    .dropdown-content {
        display: none;
        position: absolute;
        background-color: white;
        min-width: 160px;
        box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
        /* Adjusted opacity */
        z-index: 1000;
        right: 0;
    }

    .dropdown-content a {
        color: black;
        padding: 12px 16px;
        text-decoration: none;
        display: block;
        width: 100%;
        text-align: center;
    }

    .dropdown-content a:hover {
        background-color: black;
        color: white;
    }

    .dropdown:hover .dropdown-content {
        display: block;
    }

    .header {
