<%-include('../partials/user/header')%>
    <style>
        .product__cart__item__pic {
            width: 150px;
            height: 150px;
            overflow: hidden;
        }

        .product__cart__item__pic img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
    </style>

    <!-- Breadcrumb Section Begin -->
    <section class="breadcrumb-option">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb__text">
                        <h4>Wishlist</h4>
                        <div class="breadcrumb__links">
                            <a href="/">Home</a>
                            <span>wishlist</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Breadcrumb Section End -->

    <!-- Shopping Cart Section Begin -->
    <section class="shopping-cart spad">
        <div class="container">
            <div class="row">
                <div class="col d-flex justify-content-center ">
                    <div class="shopping__cart__table">
                        <%if(wishProducts.length>0){%>
                        <table class="mx-auto">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Total</th>
                                    <th>Stock</th>
                                    <th>Action</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                <%wishProducts.map((item,index)=>{%>

                                    <tr>
                                        <td class="product__cart__item">
                                            <div class="product__cart__item__pic">
                                                <img src="<%=item.productId.images[0]%>" alt="">
                                            </div>
                                            <div class="product__cart__item__text">
                                                <h6>
                                                    <%=item.productId.productName%>
                                                </h6>
                                            </div>
                                        </td>
                                        <td class="cart__price">â‚¹ <%=item.productId.regularPrice%>
                                        </td>

                                        <td class="quantity__item">
                                            <%const totalStock = item.productId.variant.reduce((acc,curr)=>acc+curr.stock,0)%>
                                            <%if(totalStock<=0){%>
                                                <span class="badge bg-danger">Out of stock </span>
                                            <%}else{%>
                                                <span class="badge bg-success">In stock </span>
                                            <%}%>
                                        </td>


                                        <td class="pe-5">
                                            <%if(totalStock<=0){%>
                                                <a href="#" aria-disabled="">
                                                    <button class="btn btn-danger" disabled>Out of stock</button>
                                                </a>
                                                <%}else{%>
                                                    <a href="/productInfo?id=<%=item.productId._id%>">
                                                        <button class="btn btn-success">View Product</button>
                                                    </a>
                                                <%}%>
                                        </td>
                                        <td class="cart__close px-3" onclick="removeWishlist('<%=index%>')"><i class="fa fa-close"></i></td>
                                    </tr>
                                </tbody>
                            </table>
                            <%})%>
                        <%}else{%>
                            <div>No Prdoucts found</div>
                        <%}%>
                    </div>
                   
                </div>

            </div>
        </div>
    </section>
    <!-- Shopping Cart Section End -->
     <script>
        function removeWishlist(index){
 
            Swal.fire({
        title: 'Are you sure',
        text: "Do you want to remove",
        icon: 'warning',
        showCancelButton: true,
        confirmButtonText: 'Yes, do it!',
        cancelButtonText: 'No, cancel!',
        reverseButtons: true
      }).then((result)=>{
        if(result.isConfirmed){

            axios.delete('/wishlist',{
                params:{index}
            })
            .then(res=>{
                if(res.status==200){
                    Swal.fire({
              title: 'Success!',
              text: 'product Removed successfully!',
              icon: 'success',
              confirmButtonText: 'Okay'
            }).then(()=>{
                window.location.reload()
            })
                }
            })
        }

      })
        }
     </script>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <%- include('../partials/user/footer') %>