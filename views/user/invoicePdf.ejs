<!-- views/pdfTemplate.ejs -->
<html>
  <head>
    <style>
      body {
        font-family: Arial, sans-serif;
        margin: 20px;
      }
      h1 {
        text-align: center;
      }
      table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
      }
      th, td {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: left;
      }
      th {
        background-color: #f2f2f2;
      }
    </style>
  </head>
  <body>
    <h1>Invoice</h1>
    <p><strong>Order ID:</strong> <%= order._id %></p>
    <table>
      <thead>
        <tr>
          <th>Product Name</th>
          <th>Quantity</th>
          <th>Size</th>
          <th>Price</th>
          <th>Total</th>
        </tr>
      </thead>
      <tbody>
        <% order.orderedItems.forEach(function(item) { %>
          <tr>
            <td><%= item.productId.productName %></td>
            <td><%= item.quantity %></td>
            <td><%= item.size || 'N/A' %></td>
            <td>₹<%= item.price %></td>
            <td>₹<%= item.totalPrice %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
    <h2>Total Amount: ₹<%= order.finalAmount %></h2>
  </body>
</html>
