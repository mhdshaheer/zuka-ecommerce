                <script>
                    const passButton = document.getElementById('passButton')
                    passButton.addEventListener('click', (e) => {
                        e.preventDefault();
                        const oldPassword = document.getElementById('oldPassword')
                        const newPassword = document.getElementById('newPassword')
                        function validate() {


                            const messageDiv = document.getElementById("message")

                            const minLength = 8;
                            const hasUppercase = /[A-Z]/.test(newPassword.value);
                            const hasLowercase = /[a-z]/.test(newPassword.value);
                            const hasNumber = /\d/.test(newPassword.value);
                            const hasSpecialChar = /[!@#$%^&*(),.?":{}|<>]/.test(newPassword.value);

                            if (newPassword.value.length < minLength) {
                                messageDiv.innerHTML = "Password must be at least 8 characters long.";
                                messageDiv.className = "error";
                                return false
                            } else if (!hasUppercase) {
                                messageDiv.innerHTML = "Password must contain at least one uppercase letter.";
                                messageDiv.className = "error";
                                return false
                            } else if (!hasLowercase) {
                                messageDiv.innerHTML = "Password must contain at least one lowercase letter.";
                                messageDiv.className = "error";
                                return false
                            } else if (!hasNumber) {
                                messageDiv.innerHTML = "Password must contain at least one number.";
                                messageDiv.className = "error";
                                return false
                            } else if (!hasSpecialChar) {
                                messageDiv.innerHTML = "Password must contain at least one special character.";
                                messageDiv.className = "error";
                                return false
                            } else {
                                messageDiv.innerHTML = "Password is valid!";
                                messageDiv.className = "success";
                                return true
                            }

                        }
                        if (validate()) {


                            axios.post('/changePass', {
                                oldPassword: oldPassword.value,
                                newPassword: newPassword.value
                            }).then(res => {
                                if (res.data) {

                                    Swal.fire({
                                        title: 'Success!',
                                        text: 'Password changed successfully!',
                                        icon: 'success',
                                        confirmButtonText: 'Okay'
                                    })
                                        .then(() => {
                                            window.location.reload();
                                        });
                                }
                            }).catch(err => {
                                if (err.response.status == 401) {
                                    Swal.fire({
                                        title: 'Error!',
                                        text: 'Incorrect Password',
                                        icon: 'error',
                                        confirmButtonText: 'Okay'
                                    });
                                }
                            })
                        }
                    })

                </script>

