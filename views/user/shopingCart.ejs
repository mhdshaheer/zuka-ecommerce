            }).then((result) => {
                if (result.isConfirmed) {
                    axios.delete('/deleteItem', { params: { index: index } })
                        .then((res) => {
                            if (res.data.message) {
                                Swal.fire({
                                    title: 'Success!',
                                    text: 'Product is removed successfully!',
                                    icon: 'success',
                                    confirmButtonText: 'Okay'
                                }).then(() => {
                                    window.location.reload()
                                })
                            }
                        })
                }

            });




        }

    </script>
