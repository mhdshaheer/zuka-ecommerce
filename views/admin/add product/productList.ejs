<%-include('../../views/partials/admin/adminHeader')%>

    <style>
        .img-sm {
            max-width: 50px;
            max-height: 50px;
        }
    </style>
    <section class="content-main">
        <div class="content-header">
            <div>
                <h2 class="content-title card-title">Products List</h2>
                <p>Product Mangement</p>
            </div>
            <div>
                <a href="#" class="btn btn-light rounded font-md">Export</a>
                <a href="#" class="btn btn-light rounded font-md">Import</a>
                <a href="/admin/products" class="btn btn-primary btn-sm rounded">Create new</a>
            </div>
        </div>
        <div class="card mb-4">
            <header class="card-header">
                <div class="row align-items-center">
                    <div class="col col-check flex-grow-0">
                        <div class="form-check ms-2">
                            <input class="form-check-input" type="checkbox" value="" />
                        </div>
                    </div>
                    <div class="col-md-3 col-12 me-auto mb-md-0 mb-3">
                        <select class="form-select">
                            <option selected>All category</option>
                            <%for(let i=0;i<category.length;i++){%>
                                <option>
                                    <%=category[i].name%>
                                </option>
                                <%}%>
                        </select>
                    </div>
                    <div class="col-md-2 col-6">
                        <input type="date" value="02.05.2021" class="form-control" />
                    </div>
                    <div class="col-md-2 col-6">
                        <select class="form-select">
                            <option selected>Status</option>
                            <option>Active</option>
                            <option>Disabled</option>
                            <option>Show all</option>
                        </select>
                    </div>
                </div>
            </header>
            <!-- card-header end// -->
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered align-middle">
                        <thead class="table-light">
                            <tr>
                                <th scope="col">No</th>
                                <th scope="col">Images/Item</th>
                                <th scope="col">Name</th>
                                <th scope="col">Price</th>
                                <th scope="col">Status</th>
                                <th scope="col">Date</th>
                                <th scope="col">Actions</th>
                                <th scope="col">Change Image</th>
                                <th scope="col">Hide/Unhide</th>
                                <th scope="col">Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            <%for(let i=0;i<products.length;i++){%>
                                <tr>
                                    <td>
                                        <%=i+1%>
                                    </td>
                                    <td>
                                        <img src="<%=products[i].images[0]%>" alt="Item" class="img-thumbnail img-sm" />
                                    </td>
                                    <td>
                                        <%=products[i].productName%>
                                    </td>
                                    <td>
                                        <%=products[i].regularPrice%>
                                    </td>
                                    <%if(products[i].isBlocked==false){%>
                                        <td>
                                            <span class="badge rounded-pill alert-success">Active</span>
                                        </td>
                                        <%}else{%>
                                            <td>
                                                <span class="badge rounded-pill alert-danger">inactive</span>
                                            </td>
                                            <%}%>
                                                <td>
                                                    <%=products[i].createdAt.toLocaleDateString()%>
                                                </td>


                                                <td>
                                                    <a href="#" class="btn btn-sm btn-primary" id="productEdit"
                                                        onclick="productEdit('<%=products[i]._id%>')">Edit</a>
                                                </td>
                                                <td>
                                                    <a href="#" type="button" class="btn btn-primary"
                                                        onclick="imageEdit('<%=products[i]._id%>')">Change</a>
                                                </td>
                                                <%if(products[i].isBlocked){%>
                                                    <td>
                                                        <a href="/admin/unBlockProduct?id=<%=products[i]._id%>"
                                                            type="button" class="btn btn-warning"
                                                            onclick="return confirmUnBlock()">Unhide</a>
                                                    </td>
                                                    <%}else{%>
                                                        <td>
                                                            <a href="/admin/blockProduct?id=<%=products[i]._id%>"
                                                                type="button" class="btn btn-danger"
                                                                onclick="return confirmBlock()">Hide</a>
                                                        </td>
                                                        <%}%>
                                                            <td>
                                                                <a href="#" class="btn btn-sm btn-danger" id="deleteBtn"
                                                                    onclick="deleteProduct('<%=products[i]._id%>')">Delete</a>
                                                            </td>
                                </tr>
                                <%}%>
                        </tbody>
                    </table>
                </div>

            </div>
            <!-- card-body end// -->
        </div>
        <!-- card end// -->
        <div class="pagination-area mt-30 mb-50">
            <nav aria-label="Page navigation example">
                <ul class="pagination justify-content-start">
                    <% if (currentPage> 1) { %>
                        <li class="page-item">
                            <a class="page-link" href="?page=<%= currentPage - 1 %>">Previous</a>
                        </li>
                        <% } %>

                            <% for (let i=1; i <=totalPages; i++) { %>
                                <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                    <a class="page-link" href="?page=<%= i %>">
                                        <%= i %>
                                    </a>
                                </li>
                                <% } %>

                                    <% if (currentPage < totalPages) { %>
                                        <li class="page-item">
                                            <a class="page-link" href="?page=<%= currentPage + 1 %>">Next</a>
                                        </li>
                                        <% } %>
                </ul>
            </nav>
        </div>
    </section>
    <!-- content-main end// -->
