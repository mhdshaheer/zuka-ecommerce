    <script>
        // delete product
        function deleteProduct(id) {
            console.log("delete function")
            if (confirm('Are you sure you want to delete this category?')) {
                fetch(`/admin/deleteProduct/${id}`, {
                    method: 'DELETE'
                })
                    .then(response => {
                        if (response.ok) {
                            alert('Product deleted successfully');
                            window.location.reload(); // Reload the page to show changes
                        } else {
                            alert('Failed to delete the product');
                        }
                    })
                    .catch(err => console.error('Error:', err));
            }
        }

        //edit product
        function productEdit(id) {
            var modal = new bootstrap.Modal(document.getElementById('productModal'));
            modal.show();

            document.getElementById('saveChangesBtn').addEventListener('click', (e) => {
                e.preventDefault();
                const productName = document.getElementById('productName')
                const description = document.getElementById('description');
                const category = document.getElementById('category');
                const regularPrice = document.getElementById('regularPrice');
                const offerPrice = document.getElementById('offerPrice');
                const totalStocks = document.getElementById('totalStocks');
                const color = document.getElementById('color');
                console.log(productName.value)
                const options = {
                    productName: productName.value,
                    description: description.value,
                    category: category.value,
                    regularPrice: regularPrice.value,
                    offerPrice: offerPrice.value,
                    totalStocks: totalStocks.value,
                    color: color.value
                }
                fetch(`/admin/editProduct/${id}`, {
                    method: "PUT",
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(options)
                })
                    .then(res => res.json())
                    .then(data => {
                        console.log("inside swal")
                        Swal.fire({
                            title: 'Success!',
                            text: 'Product Edited successfully!',
                            icon: 'success',
                            confirmButtonText: 'Okay'
                        }).then(() => {
                            console.log('reloading page....')
                            window.location.reload(); // Reload the page after success
                        });
                    })
                    .catch(err => {
                        console.error('Error:', err);
                        Swal.fire({
                            title: 'Error!',
                            text: 'Failed to Edit Product.',
                            icon: 'error',
                            confirmButtonText: 'Okay'
                        });
                    });
            })
        }

        //block product confirmation
        function confirmBlock() {
            var result = confirm("Are you sure you want to block this Product?");
            return result;
        }
        
        //unblock product confirmation
        function confirmUnBlock() {
            var result = confirm("Are you sure you want to unblock this Product?");
            return result;
        }

        //Update product images
        function imageEdit(id){
            var modal = new bootstrap.Modal(document.getElementById('imageUploadModal'));
            modal.show();
            const updateBtn = document.getElementById('updateImageId')
            updateBtn.addEventListener('click',(e)=>{
                e.preventDefault()
                const formData = new FormData();
                const imageInputs = [
                            document.getElementById('image1'),
                            document.getElementById('image2'),
                            document.getElementById('image3'),
                            document.getElementById('image4'),
                        ];
                        imageInputs.forEach((input, index) => {
                            const files = input.files;
                            for (let i = 0; i < files.length; i++) {
                                formData.append(`images`, files[i]);
                            }
                        });
        
                        //Console form data
                        for (let [key, value] of formData.entries()) {
                            console.log(key + ': ', value);
                        }
                        console.log("id is..",id)
                        fetch(`/admin/updateImages/${id}`,{
                            method:'POST',
                            body:formData
                        })
                        .then(res => res.json())
                    .then(data => {
                        console.log("inside swal")
                        Swal.fire({
                            title: 'Success!',
                            text: 'Product Image Updated successfully!',
                            icon: 'success',
                            confirmButtonText: 'Okay'
                        }).then(() => {
                            console.log('reloading page....')
                            window.location.reload(); // Reload the page after success
                        });
                    })
                    .catch(err => {
                        console.error('Error:', err);
                        Swal.fire({
                            title: 'Error!',
                            text: 'Failed to Update Images.',
                            icon: 'error',
                            confirmButtonText: 'Okay'
                        });
                    });
            })
          
    
            
        }


    </script>

    <script>
        function previewImage(input, previewId) {
            const previewDiv = document.getElementById(previewId);

            if (input.files && input.files[0]) {
                const reader = new FileReader();

                reader.onload = function (e) {
                    // Replace the contents of the preview div with the image
                    previewDiv.innerHTML = `<img src="${e.target.result}" alt="Preview" style="max-width: 100%; height: auto;">`;
                };

                reader.readAsDataURL(input.files[0]); // Read the file as a data URL
            } else {
                // Reset the preview div if no file is selected
                previewDiv.innerHTML = "No image uploaded";
            }
        }
    </script>

